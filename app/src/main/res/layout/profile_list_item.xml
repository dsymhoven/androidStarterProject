<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:id="@+id/profile_list_item_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/profile_image"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginLeft="10dp"
        android:id="@+id/name_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/email_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:textSize="16dp"
        android:textColor="#000"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/phone_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your name"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_toEndOf="@+id/name_label"
        android:layout_marginLeft="10dp"
        android:id="@+id/name_textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your email"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_alignBottom="@+id/email_label"
        android:layout_toEndOf="@+id/email_label"
        android:layout_marginLeft="5dp"
        android:id="@+id/email_textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your number"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_alignBottom="@+id/phone_label"
        android:layout_toEndOf="@+id/phone_label"
        android:layout_marginLeft="5dp"
        android:id="@+id/phone_textView"/>
</RelativeLayout>